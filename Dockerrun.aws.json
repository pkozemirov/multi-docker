{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [{
      "name": "client",
      "image": "kozemirov/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "kozemirov/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "kozemirov/multi-worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "kozemirov/multi-nginx",
      "essential": true,
      "portMappings": [{
        "hostPort": 80,
        "containerPort": 80
      }],
      "links": ["client", "server"]
    }
  ]
}